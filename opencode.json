{
  "$schema": "https://opencode.ai/config.json",
  "theme": "opencode",
  "instructions": [],
  "provider": {
    "moonshot": {
      "npm": "@ai-sdk/openai-compatible",
      "options": {
        "baseURL": "https://api.moonshot.ai/v1",
        "apiKey": "{file:./.secrets/moonshot-key}"
      },
      "models": {
        "kimi-k2-0711-preview": {}
      }
    }
  },
  "permission": {
    "bash": {
      "cd*": "allow",
      "deno check*": "allow",
      "deno init*": "ask",
      "deno task test*": "allow",
      "git add*": "allow",
      "git diff*": "allow",
      "git log*": "allow",
      "git rm*": "ask",
      "git status*": "allow",
      "grep*": "allow",
      "ls*": "allow",
      "mkdir*": "allow",
      "pwd*": "allow",
      "*": "ask"
    }
  }
}
